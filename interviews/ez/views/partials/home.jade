h2 User Search
.q1
    .input-group
        input(ng-model='user_search_key', type='text', class='form-control', placeholder='User Search Keyword')
        span.input-group-btn
            button.btn.btn-primary(ng-click='search(user_search_key)') Search

h2 Get Missing Letters
.q2
    .input-group
        input(ng-model='sentence', type='text', class='form-control', placeholder='Type a sentence')
        span.input-group-btn
            button.btn.btn-primary(ng-click='get_missing_letters(sentence)') Check
    h4 What is missing in this sentence: {{missing || ''}}

h2 Particles
.q3
    .row
        .col-sm-2
            input(ng-model='step', type='text', class='form-control', placeholder='input the speed')
        .col-sm-9
            input(ng-model='initial', type='text', class='form-control', placeholder='input the initial state')
        .col-sm-1
            button.btn.btn-primary(ng-click='go(step, initial)') Go
        div(style='text-align:center')
            ul.list-unstyled
                li(ng-repeat="row in result") {{row}}

